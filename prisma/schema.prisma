// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"

}


model Neighborhood {
  id Int @id @default(autoincrement())
  name String
  description String
  location String
  image String
  members String
 
}

model Category {
  id Int @id @default(autoincrement())
  name String
  description String
}

model Member {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  role     Role     @default(MEMBER)
  posts   Posts[]
  profile Profile?
  address String
  imageLink String
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  member   Member   @relation(fields: [memberId], references: [id])
  memberId Int    @unique
    @@index([memberId], name: "idx_memberId") // Add an index for better performance

}
enum Role {
  MEMBER
  ADMIN
}
model Posts {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  title      String
  content    String
  author     Member?       @relation(fields: [authorId], references: [id])
  authorId   Int?
  @@index([authorId], name: "idx_authorId")

}
model Council {
  id Int @id @default(autoincrement())
  name String
  description String
}


model Product {
  id Int @id @default(autoincrement())
  name String
  description String
  price Decimal
  availability Boolean
}

model Book {
  id Int @id @default(autoincrement())
  author String
  country String
  link String
  title String
  imageLink String
  language String
  pages Int
  year Int
  }